{
  "mappings": {
    "_default_": {
      "_all": {
        "norms": {
          "enabled": false
        }
      },
      "dynamic_templates": [
        {
          "fields": {
            "mapping": {
              "ignore_above": 1024,
              "type": "string",
              "index": "not_analyzed"
            },
            "match_mapping_type": "string",
            "path_match": "fields.*"
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "beat": {
          "properties": {
            "hostname": {
              "ignore_above": 1024,
              "type": "string",
              "index": "not_analyzed"
            },
            "name": {
              "ignore_above": 1024,
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "input_type": {
          "ignore_above": 1024,
          "type": "string",
          "index": "not_analyzed"
        },
        "message": {
          "norms": {
            "enabled": false
          },
          "type": "string"
        },
        "offset": {
          "type": "long"
        },
        "source": {
          "ignore_above": 1024,
          "type": "string",
          "index": "not_analyzed"
        },
        "tags": {
          "ignore_above": 1024,
          "type": "string",
          "index": "not_analyzed"
        },
        "ts": {
          "type": "long",
          "index": "not_analyzed"
        },
        "type": {
          "ignore_above": 1024,
          "type": "string",
          "index": "not_analyzed"
        }
      }
    }
  },
  "order": 0,
  "settings": {
    "index": {
      "refresh_interval": "5s",
      "number_of_shards": 1,
      "number_of_replicas": 0
    },
    "mapping": {
      "ignore_malformed": true
    }
  },
  "template": "filebeat-*"
}

